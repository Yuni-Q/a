<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Product</th>
      <th>Number</th>
      <th>Donation</th>
      <th>Product price</th>
      <th>Donation price</th>
      <th>Total price</th>
      <th>Address</th>
      <th>Payment</th>
      <th>Invoice</th>
      <th>Parcel</th>
      <th>Parcel number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user %></td>
        <td><%= order.product %></td>
        <td><%= order.number %></td>
        <td><%= order.donation %></td>
        <td><%= order.product_price %></td>
        <td><%= order.donation_price %></td>
        <td><%= order.total_price %></td>
        <td><%= order.address %></td>
        <td><%= order.payment %></td>
        <td><%= order.invoice %></td>
        <td><%= order.parcel %></td>
        <td><%= order.parcel_number %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

